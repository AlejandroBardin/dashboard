<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-end mb-8">
        <div>
            <h1 class="text-3xl font-bold text-slate-900 flex items-center gap-3">
                <i data-lucide="skull" class="w-8 h-8 text-red-500"></i>
                Bot Hall of Shame
            </h1>
            <p class="text-slate-500 mt-1">Donde los bots vienen a morir (y nosotros a aprender).</p>
        </div>
        <%= link_to root_path, class: "flex items-center gap-2 text-slate-600 hover:text-slate-900 font-medium transition-colors" do %>
            <i data-lucide="arrow-left" class="w-4 h-4"></i>
            Volver al War Room
        <% end %>
    </div>

    <!-- Failures List -->
    <div class="space-y-6">
        <% @failures.each do |conversation| %>
            <div class="bg-white rounded-xl border border-red-100 shadow-sm overflow-hidden hover:border-red-200 transition-colors">
                <div class="p-6">
                    <div class="flex justify-between items-start mb-4">
                        <div class="flex items-center gap-3">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-red-100 text-red-600 font-bold text-sm">
                                <%= conversation.id %>
                            </span>
                            <span class="text-xs font-mono text-slate-400">
                                <%= conversation.created_at.strftime("%d/%m %H:%M") %>
                            </span>
                             <% if conversation.analysis.present? %>
                                <span class="px-2 py-1 bg-red-50 text-red-700 text-xs font-semibold rounded-md border border-red-100">
                                    Rating: <%= conversation.analysis['bot_rating'] %>/10
                                </span>
                            <% end %>
                        </div>
                        <a href="https://app.chatwoot.com/app/accounts/1/conversations/<%= conversation.external_id %>" target="_blank" class="text-indigo-600 hover:text-indigo-800 text-sm font-medium flex items-center gap-1">
                            Ver en Chatwoot <i data-lucide="external-link" class="w-3 h-3"></i>
                        </a>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Analysis Column -->
                        <div class="space-y-3">
                            <h4 class="text-sm font-semibold text-slate-900 uppercase tracking-wider">Diagnóstico Forense</h4>
                            <% if conversation.analysis.present? %>
                                <div class="p-4 bg-slate-50 rounded-lg border border-slate-100">
                                    <p class="text-red-700 font-medium mb-1">
                                        Objeción: <%= conversation.analysis['objection'] || 'N/A' %>
                                    </p>
                                    <p class="text-slate-600 text-sm italic">
                                        "<%= conversation.analysis['summary'] %>"
                                    </p>
                                    <div class="mt-3 flex gap-2">
                                        <div class="px-2 py-1 bg-white rounded border border-slate-200 text-xs">
                                            Temp: <span class="font-bold"><%= conversation.analysis['temperature'] %></span>
                                        </div>
                                        <div class="px-2 py-1 bg-white rounded border border-slate-200 text-xs">
                                            Emoción: <span class="font-bold"><%= conversation.analysis['emotion'] %></span>
                                        </div>
                                    </div>
                                </div>
                            <% else %>
                                <div class="p-4 bg-slate-50 rounded-lg border border-slate-100 text-slate-400 italic text-sm">
                                    Pendiente de autopsia (Sync con IA requerido)
                                </div>
                            <% end %>
                        </div>

                         <!-- Raw Data / Context Preview -->
                        <div class="space-y-3">
                             <h4 class="text-sm font-semibold text-slate-900 uppercase tracking-wider">Contexto</h4>
                             <div class="p-4 bg-slate-900 rounded-lg text-slate-300 font-mono text-xs overflow-x-auto">
                                <p>Status: <%= conversation.status %></p>
                                <p class="truncate">External ID: <%= conversation.external_id %></p>
                                <% if conversation.raw_data.present? %>
                                    <% # Intentar mostrar el último mensaje o algo relevante si está disponible en raw_data %>
                                    <div class="mt-2 pt-2 border-t border-slate-700">
                                        Etiquetas: <%= conversation.raw_data.dig('meta', 'labels') || 'Ninguna' %>
                                    </div>
                                <% end %>
                             </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
        
        <% if @failures.empty? %>
            <div class="text-center py-12">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-100 text-green-600 mb-4">
                    <i data-lucide="check-circle-2" class="w-8 h-8"></i>
                </div>
                <h3 class="text-lg font-medium text-slate-900">¡Increíble!</h3>
                <p class="text-slate-500">No hay fallas reportadas (¿o el bot se cree perfecto?).</p>
            </div>
        <% end %>
    </div>
</div>
