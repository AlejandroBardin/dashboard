<!-- This view uses the standard application layout but includes the specific dashboard structure -->
<nav class="bg-white border-b border-slate-200 h-16 flex items-center px-8 justify-between sticky top-0 z-10">
    <div class="flex items-center gap-2">
        <div class="bg-indigo-600 text-white p-1.5 rounded-lg font-bold text-xl">LG</div>
        <span class="font-semibold text-lg tracking-tight">Audit System</span>
    </div>
    <div class="flex items-center gap-4">
        <span class="text-sm text-slate-500">Última sync: <span data-controller="timeago" data-timeago-datetime-value="<%= Time.current.iso8601 %>">Hace un momento</span></span>
        <div class="h-8 w-8 bg-slate-200 rounded-full flex items-center justify-center text-slate-600 font-bold">A</div>
    </div>
</nav>

<main class="max-w-7xl mx-auto p-8">
    <!-- Stats Row -->
    <div class="flex justify-between items-end mb-8">
        <div>
            <h1 class="text-3xl font-bold text-slate-900">The War Room</h1>
            <p class="text-slate-500 mt-1">Metricas de auditoría en tiempo real</p>
        </div>
        <div class="flex items-center gap-4">
            <%= button_to analyze_dashboard_path, method: :post, class: "flex items-center gap-2 bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg font-medium transition-colors shadow-sm" do %>
                <i data-lucide="refresh-cw" class="w-4 h-4"></i>
                Sync con IA
            <% end %>

            <%= link_to bot_failures_path, class: "flex items-center gap-2 bg-red-100 hover:bg-red-200 text-red-700 px-4 py-2 rounded-lg font-medium transition-colors border border-red-200" do %>
                <i data-lucide="skull" class="w-4 h-4"></i>
                Hall of Shame
            <% end %>
            
        </div>
    </div>

    <!-- Row 1: AI Analysis -->


    <h2 class="text-2xl font-bold text-slate-900 mb-6 flex items-center gap-2">
        <i data-lucide="bar-chart-2" class="w-6 h-6 text-indigo-600"></i>
        Métricas Comerciales (Real Time)
    </h2>

    <!-- Row 2: Ventas vs Oportunidades (Monthly Trend) -->
    <!-- Chart 1: Money ($) -->
    <div class="bg-white p-6 rounded-xl border border-slate-200 shadow-sm mb-8">
        <h3 class="text-lg font-semibold text-slate-800 mb-4">Ventas vs Oportunidades (Por mes $)</h3>
        <%= column_chart [
            {name: "ventas", data: @monthly_sales},
            {name: "oportunidades", data: @monthly_ops},
            {name: "cancelado", data: @monthly_cancelled}
        ], colors: ["#4ade80", "#3b82f6", "#ef4444"], prefix: "$", stacked: false, round: 2, height: "350px", 
           library: { 
             plugins: { 
               datalabels: { 
                 display: true, 
                 anchor: 'end', 
                 align: 'top', 
                 color: '#475569', 
                 font: { weight: 'bold' },
                 formatter: "(val) => '$' + Math.round(val).toLocaleString()"
               } 
             } 
           } %>
    </div>

    <!-- Chart 2: Count (#) -->
    <div class="bg-white p-6 rounded-xl border border-slate-200 shadow-sm mb-8">
        <h3 class="text-lg font-semibold text-slate-800 mb-4">Ventas vs Oportunidades (Por mes #)</h3>
        <%= column_chart [
            {name: "ventas", data: @monthly_sales_count},
            {name: "oportunidades", data: @monthly_ops_count},
            {name: "cancelado", data: @monthly_cancelled_count}
        ], colors: ["#4ade80", "#3b82f6", "#ef4444"], stacked: false, height: "350px", 
           library: { 
             plugins: { 
               datalabels: { 
                 display: true, 
                 anchor: 'end', 
                 align: 'top', 
                 color: '#475569', 
                 font: { weight: 'bold' } 
               } 
             } 
           } %>
    </div>

    <!-- Row 3: Time in Status (Moved Up) -->
    <div class="bg-white p-6 rounded-xl border border-slate-200 shadow-sm mb-8">
        <h3 class="text-lg font-semibold text-slate-800 mb-4">Tiempo Promedio en Cada Estado</h3>
        <p class="text-sm text-slate-500 mb-4">Promedio de tiempo que transcurre antes de cambiar al siguiente estado.</p>
        <%= bar_chart @avg_time_in_status, colors: ["#4ade80"], height: "300px",
            library: {
               plugins: { 
                 datalabels: { 
                   color: '#475569', anchor: 'end', align: 'end',
                   formatter: "(val) => { if(val < 1) { return Math.round(val * 24 * 10) / 10 + ' hours' } else { return val + ' days' } }"
                 } 
               }
            }
        %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <!-- Potencial -->
        <div class="bg-white p-6 rounded-xl border border-slate-200 shadow-sm">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm font-medium text-slate-500">Monto Potencial</p>
                    <h3 class="text-2xl font-bold mt-1 text-slate-900"><%= number_to_currency(@total_potential, unit: "$", precision: 0) %></h3>
                </div>
                <div class="p-2 bg-blue-50 text-blue-600 rounded-lg"><i data-lucide="dollar-sign"></i></div>
            </div>
        </div>

        <!-- Cerradas -->
        <div class="bg-white p-6 rounded-xl border border-slate-200 shadow-sm">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm font-medium text-slate-500">Ventas Cerradas</p>
                    <h3 class="text-2xl font-bold mt-1 text-emerald-600"><%= number_to_currency(@sales_closed, unit: "$", precision: 0) %></h3>
                </div>
                <div class="p-2 bg-emerald-50 text-emerald-600 rounded-lg"><i data-lucide="check-circle"></i></div>
            </div>
        </div>

        <!-- Caídas -->
        <div class="bg-white p-6 rounded-xl border border-slate-200 shadow-sm">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm font-medium text-slate-500">Ventas Caídas</p>
                    <h3 class="text-2xl font-bold mt-1 text-rose-600"><%= number_to_currency(@sales_lost, unit: "$", precision: 0) %></h3>
                </div>
                <div class="p-2 bg-rose-50 text-rose-600 rounded-lg"><i data-lucide="x-circle"></i></div>
            </div>
        </div>
        
        <!-- Fallas Bot -->
        <div class="bg-white p-6 rounded-xl border border-slate-200 shadow-sm">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm font-medium text-slate-500">Fallas del Bot</p>
                    <h3 class="text-2xl font-bold mt-1 text-amber-600"><%= @bot_failures %></h3>
                </div>
                <div class="p-2 bg-amber-50 text-amber-600 rounded-lg"><i data-lucide="bot"></i></div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden flex flex-col max-h-[600px]">
        <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50 flex justify-between items-center sticky top-0 z-10">
            <h3 class="font-semibold text-slate-800">Últimas Auditorías</h3>
        </div>
        
        <div class="overflow-y-auto flex-1">
            <!-- Turbo Stream Target -->
            <table class="w-full text-left border-collapse">
            <thead>
                <tr class="text-xs font-semibold text-slate-500 uppercase tracking-wider border-b border-slate-200 bg-slate-50">
                    <th class="px-6 py-4">ID Chat</th>
                    <th class="px-6 py-4">Estado</th>
                    <th class="px-6 py-4">Monto Est.</th>
                    <th class="px-6 py-4">Diagnóstico IA</th>
                    <th class="px-6 py-4">Acción</th>
                </tr>
            </thead>
            <tbody id="conversations_list" class="divide-y divide-slate-100 text-sm">
                <!-- Render existing conversations -->
                <%= render partial: "conversation", collection: @conversations %>
            </tbody>
        </table>
        </div>
    </div>
</main>

<script>
    // Initialize Lucide icons
    if (typeof lucide !== 'undefined') {
        lucide.createIcons();
    }
</script>
