<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-end mb-8">
        <div>
            <h1 class="text-3xl font-bold text-slate-900 flex items-center gap-3">
                <i data-lucide="timer-off" class="w-8 h-8 text-orange-500"></i>
                Fallas de Tiempo / Entrega
            </h1>
            <p class="text-slate-500 mt-1">Conversaciones donde la velocidad o la logística jugaron en contra.</p>
        </div>
        <%= link_to root_path, class: "flex items-center gap-2 text-slate-600 hover:text-slate-900 font-medium transition-colors" do %>
            <i data-lucide="arrow-left" class="w-4 h-4"></i>
            Volver al War Room
        <% end %>
    </div>

    <!-- Failures List -->
    <div class="space-y-6">
        <% @failures.each do |conversation| %>
            <% 
               analysis = conversation.analysis || {} 
               sales_outcome = analysis['sales_outcome'] || {}
               agent_perf = analysis['agent_performance'] || {}
               
               loss_reason = sales_outcome['loss_reason']
               response_time_rating = agent_perf['response_time_rating']
               delivery_promise = agent_perf['delivery_promise']
               
                # Metrics
               delivery_complaint = (analysis.dig('post_sales_analysis', 'complaint_type') != 'none')
               is_delayed = (analysis.dig('post_sales_analysis', 'delivery_status') == 'delayed')
               is_angry = (analysis.dig('post_sales_analysis', 'customer_anger') == true)
            %>

            <div class="bg-white rounded-xl border border-orange-100 shadow-sm overflow-hidden hover:border-orange-200 transition-colors">
                <div class="p-6">
                    <div class="flex justify-between items-start mb-4">
                        <div class="flex items-center gap-3">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-orange-100 text-orange-600 font-bold text-sm">
                                #<%= conversation.id %>
                            </span>
                            <span class="text-xs font-mono text-slate-400">
                                <%= conversation.created_at.strftime("%d/%m %H:%M") %>
                            </span>
                            
                            <% if loss_reason.present? %>
                                <span class="px-2 py-1 bg-rose-50 text-rose-700 text-xs font-semibold rounded-md border border-rose-100 flex items-center gap-1">
                                    <i data-lucide="x-circle" class="w-3 h-3"></i> <%= loss_reason.titleize %>
                                </span>
                            <% end %>

                            <% if is_angry %>
                                <span class="px-2 py-1 bg-red-600 text-white text-xs font-bold rounded-md shadow-sm border border-red-700 flex items-center gap-1 animate-pulse">
                                    <i data-lucide="flame" class="w-3 h-3"></i> CLIENTE ENOJADO
                                </span>
                            <% end %>
                            
                            <% if is_delayed %>
                                <span class="px-2 py-1 bg-amber-100 text-amber-800 text-xs font-semibold rounded-md border border-amber-200 flex items-center gap-1">
                                    <i data-lucide="hourglass" class="w-3 h-3"></i> DEMORADO
                                </span>
                            <% end %>
                        </div>
                        
                        <a href="https://chatwoot.grafica.xetro.com.ar/app/accounts/1/conversations/<%= conversation.external_id %>" target="_blank" class="text-indigo-600 hover:text-indigo-800 text-sm font-medium flex items-center gap-1 bg-indigo-50 px-3 py-1.5 rounded-lg hover:bg-indigo-100 transition-colors">
                            Ver en Chatwoot <i data-lucide="external-link" class="w-3 h-3"></i>
                        </a>
                    </div>

                    <div class="grid grid-cols-1 gap-6">
                        <!-- Analysis Column -->
                        <div class="space-y-3">
                            <h4 class="text-xs font-bold text-slate-400 uppercase tracking-wider flex items-center gap-2">
                                <i data-lucide="clock" class="w-3 h-3"></i> Análisis de Tiempos & Post-Venta
                            </h4>
                            
                            <% if analysis.present? %>
                                <div class="p-4 bg-slate-50 rounded-lg border border-slate-100">
                                    <p class="text-slate-800 font-medium mb-2 italic">
                                        "<%= sales_outcome['loss_explanation'] || 'Sin explicación clara.' %>"
                                    </p>
                                    
                                    <div class="flex flex-wrap gap-2 mt-3">
                                        <% if response_time_rating.present? %>
                                            <span class="px-2 py-1 bg-white border border-slate-200 text-slate-600 text-xs font-semibold rounded flex items-center gap-1">
                                                Rating Velocidad: <strong class="<%= response_time_rating.to_i <= 5 ? 'text-red-600' : 'text-green-600' %>"><%= response_time_rating %>/10</strong>
                                            </span>
                                        <% end %>
                                        
                                        <% if delivery_promise == true %>
                                            <span class="px-2 py-1 bg-blue-100 text-blue-700 text-xs font-bold rounded flex items-center gap-1">
                                                <i data-lucide="calendar-check" class="w-3 h-3"></i> Prometió Fecha
                                            </span>
                                        <% end %>
                                        
                                        <% if delivery_complaint %>
                                             <span class="px-2 py-1 bg-purple-100 text-purple-700 text-xs font-bold rounded flex items-center gap-1">
                                                <i data-lucide="megaphone" class="w-3 h-3"></i> Reclamo: <%= analysis.dig('post_sales_analysis', 'complaint_type') %>
                                            </span>
                                        <% end %>
                                    </div>
                                </div>
                            <% else %>
                                <div class="p-4 bg-slate-50 rounded-lg border border-slate-100 text-slate-400 italic text-sm">
                                    Pendiente de análisis...
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
        
        <% if @failures.empty? %>
            <div class="text-center py-12">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-100 text-green-600 mb-4">
                    <i data-lucide="check-circle-2" class="w-8 h-8"></i>
                </div>
                <h3 class="text-lg font-medium text-slate-900">¡Todo a Tiempo!</h3>
                <p class="text-slate-500">No detectamos quejas por demoras o entregas tardías.</p>
            </div>
        <% end %>
    </div>
</div>

<script>
    if (typeof lucide !== 'undefined') {
        lucide.createIcons();
    }
</script>
